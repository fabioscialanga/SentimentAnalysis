pipeline {
    agent any

    parameters {
        booleanParam(name: 'APPLY_K8S', defaultValue: false, description: 'Applica i manifest Kubernetes dopo il deploy Docker Compose')
    }

    environment {
        DOCKER_IMAGE = "sentiment-analysis-api"
        REGISTRY_TAG = "latest"
        COMPOSE_CMD = "docker compose"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    echo 'Building Docker Image...'
                    if (isUnix()) {
                        sh "docker build -t ${DOCKER_IMAGE}:${REGISTRY_TAG} ./api"
                    } else {
                        bat "docker build -t ${DOCKER_IMAGE}:${REGISTRY_TAG} ./api"
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'Running Unit Tests...'
                    if (isUnix()) {
                        sh """
                        python -m pip install --upgrade pip
                        python -m pip install -r api/requirements.txt
                        python -m pip install pytest
                        pytest api/tests/
                        """
                    } else {
                        bat """
                        python -m pip install --upgrade pip
                        python -m pip install -r api/requirements.txt
                        python -m pip install pytest
                        pytest api/tests/
                        """
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying to Production...'
                    if (isUnix()) {
                        sh "${COMPOSE_CMD} up -d --build sentiment-api"
                    } else {
                        bat "${COMPOSE_CMD} up -d --build sentiment-api"
                    }
                }
            }
        }
        
        stage('Deploy K8s (optional)') {
            when {
                expression { return params.APPLY_K8S == true }
            }
            steps {
                script {
                    echo 'Applying Kubernetes manifests...'
                    if (isUnix()) {
                        sh "kubectl apply -f k8s/sentiment-stack.yaml"
                    } else {
                        bat "kubectl apply -f k8s/sentiment-stack.yaml"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
